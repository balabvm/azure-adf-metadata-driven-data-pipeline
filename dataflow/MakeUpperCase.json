{
	"name": "MakeUpperCase",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Raw",
						"type": "DatasetReference"
					},
					"name": "rawdataset"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "MakeUpperCase"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Id as string,",
				"          name as string,",
				"          age as string,",
				"          department as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> rawdataset",
				"rawdataset derive(name_upper = upper(name)) ~> MakeUpperCase"
			]
		}
	}
}