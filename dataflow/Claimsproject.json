{
	"name": "Claimsproject",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "sourceclaims",
						"type": "DatasetReference"
					},
					"name": "IncrementalClaimsDataFlow"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "ConvertCreatedDate"
				},
				{
					"name": "FilterNewRows"
				}
			],
			"scriptLines": [
				"parameters{",
				"     LastLoadDate as date",
				"}",
				"source(output(",
				"          ClaimID as string,",
				"          PatientName as string,",
				"          Insurance as string,",
				"          Amount as string,",
				"          CreatedDate as string 'toDate(CreatedDate,\\'yyyy-MM-dd\\')'",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     limit: 100,",
				"     ignoreNoFilesFound: false) ~> IncrementalClaimsDataFlow",
				"IncrementalClaimsDataFlow derive(CreatedDate = toDate(CreatedDate,'yyyy-MM-dd HH:mm:ss')) ~> ConvertCreatedDate",
				"ConvertCreatedDate filter(CreatedDate_datetime > $LastLoadDate) ~> FilterNewRows"
			]
		}
	}
}